{% extends 'base.html.twig' %}



{% block body %}
<div class="container mt-4">
    <h2 class="mb-4 text-center" style="color: #28A745;font-weight:bold;">Affiche des Commandes</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="{{ path('commande_create') }}" class="btn btn-primary" style="border-radius: 30px; padding: 10px 20px;background-color:#28A745;">
             + Créer une Commande
        </a>
    </div>

    <!-- Tableau simple -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Date Commande</th>
                <th>Nom Client</th>
                <th>Téléphone Client</th>
                <th>Email Client</th>
                <th>Médicament Commandé</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
                <tr>
                    <td>{{ commande.id }}</td>
                    <td>{{ commande.datecommande|date('d/m/Y') }}</td>
                    <td>{{ commande.nomclient }}</td>
                    <td>{{ commande.telephoneclient }}</td>
                    <td>{{ commande.emailclient }}</td>
                    <td>{{ commande.medicammentcommande }}</td>
                    <td class="text-center">
    <div class="d-flex justify-content-center align-items-center gap-2">
        <a href="{{ path('commande_edit', {'id': commande.id}) }}" class="btn btn-success btn-sm">
            Edit
        </a>
        <form method="post" action="{{ path('commande_delete', {'id': commande.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce médicament ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
    </div>
</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center" style="color: #1D3557;">Aucune commande trouvée.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Navigation de la pagination -->
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(commandes) }}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    <style>
        /* Style du tableau */
        .table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }
        

        .table thead th {
            background-color: #343a40;
            color: #fff;
            text-align: left;
            font-size: 16px;
            font-weight: bold;
            padding: 12px;
        }

        .table tbody td {
            padding: 10px;
            text-align: left;
            font-size: 14px;
            color: #333;
            border-bottom: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        /* Style des boutons */
        .btn-success {
            background-color: #28a745;
            color: white;
            border-radius: 5px;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border-radius: 5px;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        /* Espacement entre lignes */
        .table tbody tr {
            transition: background-color 0.3s ease;
        }

        .text-center {
            text-align: center;
        }

        /* Pagination */
        .pagination {
            display: inline-flex;
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }

        .pagination li a, .pagination li span {
            padding: 8px 12px;
            text-decoration: none;
            font-size: 14px;
            font-weight: bold;
            color: #343a40;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin: 0 5px;
        }
        

        .pagination li a:hover, .pagination li span.current {
            background-color: #343a40;
            color: white;
        }
    </style>
{% endblock %}
