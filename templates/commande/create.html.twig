{% extends 'base.html.twig' %}

{% block title %}Créer une Commande{% endblock %}

{% block body %}
<div class="container" style="margin-top: -23px;">
    <!-- En-tête -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-nouvelle-commande" style="color: #28A745 !important;">
            <i class="fas fa-plus-circle me-2"></i> Nouvelle Commande
        </h2>
        <a href="{{ path('admin_commande_list') }}" class="btn btn-light border rounded-circle shadow-sm p-2">
            <i class="fas fa-times"></i>
        </a>
    </div>

    <!-- Carte du formulaire -->
    <div class="card border-0 shadow-lg rounded-4 p-4">
        <div class="card-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="row g-4">
                <!-- Nom du client -->
                <div class="col-md-6">
                    <label for="{{ form.nomclient.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-user me-2"></i> Nom du Client
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-user"></i></span>
                        {{ form_widget(form.nomclient, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.nomclient) }}</div>
                </div>

                <!-- Médicament commandé -->
                <div class="col-md-6">
                    <label for="{{ form.medicammentcommande.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-pills me-2"></i> Médicament
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-capsules"></i></span>
                        {{ form_widget(form.medicammentcommande, {'attr': {'class': 'form-select shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.medicammentcommande) }}</div>
                </div>

                <!-- Date de commande -->
                <div class="col-md-6">
                    <label for="{{ form.datecommande.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-calendar-alt me-2"></i> Date de Commande
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-calendar"></i></span>
                        {{ form_widget(form.datecommande, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.datecommande) }}</div>
                </div>

                <!-- Téléphone -->
                <div class="col-md-6">
                    <label for="{{ form.telephoneclient.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-phone-alt me-2"></i> Téléphone
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-phone"></i></span>
                        {{ form_widget(form.telephoneclient, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.telephoneclient) }}</div>
                </div>

                <!-- Email -->
                <div class="col-md-6">
                    <label for="{{ form.emailclient.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-envelope me-2"></i> Email
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-envelope"></i></span>
                        {{ form_widget(form.emailclient, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.emailclient) }}</div>
                </div>
            </div>

            <!-- Boutons d'action -->
            <div class="d-flex justify-content-end mt-4 gap-3">
                <a href="{{ path('admin_commande_list') }}" class="btn btn-outline-danger px-4 py-2 rounded-pill">
                    <i class="fas fa-times me-2"></i> Annuler
                </a>
                <button type="submit" class="btn btn-confirm px-4 py-2 rounded-pill shadow"
                        style="background-color: #28A745 !important; border-color: #28A745 !important; color: white !important;">
                    <i class="fas fa-check me-2"></i> Confirmer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<!-- Ajout de FontAwesome pour les icônes -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

{% endblock %}
