{% extends 'base.html.twig' %}

{% block title %}Créer un produit médical{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- En-tête -->
    <div class="d-flex justify-content-between align-items-center mb-4" style="margin-top: -50px;">
        <h2 class="fw-bold text-success" style="color: #28A745 !important;">
            <i class="fas fa-plus-circle me-2"></i> Nouveau produit médical
        </h2>
        <a href="{{ path('admin_medicament_list') }}" class="btn btn-light border rounded-circle shadow-sm p-2">
            <i class="fas fa-times"></i>
        </a>
    </div>

    <!-- Carte du formulaire -->
    <div class="card border-0 shadow-lg rounded-4 p-4">
        <div class="card-body">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

            <div class="row g-4">
                <!-- Nom du Produit Médical -->
                <div class="col-md-6">
                    <label for="{{ form.nom.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-capsules me-2"></i> Nom du Produit Médical
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-tag"></i></span>
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.nom) }}</div>
                </div>

                <!-- Dosage Médical -->
                <div class="col-md-6">
                    <label for="{{ form.dosage.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-prescription-bottle-alt me-2"></i> Dosage Médical
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-vial"></i></span>
                        {{ form_widget(form.dosage, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.dosage) }}</div>
                </div>

                <!-- Forme du Produit Médical -->
                <div class="col-md-6">
                    <label for="{{ form.forme.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-pills me-2"></i> Forme du Produit Médical
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-cube"></i></span>
                        {{ form_widget(form.forme, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.forme) }}</div>
                </div>

                <!-- Prix du Produit Médical -->
                <div class="col-md-6">
                    <label for="{{ form.prix.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-dollar-sign me-2"></i> Prix du Produit Médical
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-dollar-sign"></i></span>
                        {{ form_widget(form.prix, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.prix) }}</div>
                </div>

                <!-- Quantité en Stock -->
                <div class="col-md-6">
                    <label for="{{ form.quantiteenstock.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-boxes me-2"></i> Quantité en Stock
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-archive"></i></span>
                        {{ form_widget(form.quantiteenstock, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.quantiteenstock) }}</div>
                </div>

                <!-- Date Limite du Produit Médical -->
                <div class="col-md-6">
                    <label for="{{ form.datelimite.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-calendar-alt me-2"></i> Date Limite du Produit Médical
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-calendar"></i></span>
                        {{ form_widget(form.datelimite, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.datelimite) }}</div>
                </div>

                <!-- Description du produit Médical -->
                <div class="col-12">
                    <label for="{{ form.description.vars.id }}" class="form-label fw-semibold text-secondary">
                        <i class="fas fa-info-circle me-2"></i> Description du produit Médical
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="fas fa-info"></i></span>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control shadow-sm rounded-end'}}) }}
                    </div>
                    <div class="text-danger">{{ form_errors(form.description) }}</div>
                </div>
            </div>

            <!-- Boutons d'action -->
            <div class="d-flex justify-content-end mt-4 gap-3">
                <a href="{{ path('admin_medicament_list') }}" class="btn btn-outline-danger px-4 py-2 rounded-pill">
                    <i class="fas fa-times me-2"></i> Annuler
                </a>
                <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow"
                        style="background-color: #28A745 !important; border-color: #28A745 !important; color: white !important;">
                    <i class="fas fa-check me-2"></i> Confirmer
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<!-- Ajout de FontAwesome pour les icônes -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
{% endblock %}
