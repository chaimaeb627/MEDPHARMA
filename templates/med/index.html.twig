{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-4">
    <h2 class="mb-4 text-center" style="color: #28A745;font-weight:bold;">Affiche des Produits Médicaux</h2>

    <div class="d-flex justify-content-between mb-3">
        <a href="{{ path('medicament_create') }}" class="btn btn-primary" style="border-radius: 30px; padding: 10px 20px;background-color:#28A745;">
            + Créer un produit médical
        </a>
    </div>

    <!-- Tableau simple -->
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Dosage</th>
                <th>Forme</th>
                <th>Prix</th>
                <th>Quantité en Stock</th>
                <th>Date Limite</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for medicament in medicaments %}
                <tr{% if loop.first %} class="first-row"{% endif %}>
                    <td>{{ medicament.id }}</td>
                    <td>{{ medicament.nom }}</td>
                    <td>{{ medicament.dosage }}</td>
                    <td>{{ medicament.forme }}</td>
                    <td>{{ medicament.prix }}</td>
                    <td>{{ medicament.quantiteenstock }}</td>
                    <td>{{ medicament.datelimite|date('d/m/Y') }}</td>
                    <td>{{ medicament.description }}</td>
                    <td class="text-center">
    <div class="d-flex justify-content-center align-items-center gap-2">
        <a href="{{ path('medicament_edit', {'id': medicament.id}) }}" class="btn btn-success btn-sm">
            Edit
        </a>
        <form method="post" action="{{ path('medicament_delete', {'id': medicament.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce médicament ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medicament.id) }}">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
    </div>
</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center" style="color: #1D3557;">Aucun médicament trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <!-- Navigation de la pagination -->
    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(medicaments) }}
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    <style>
        /* Style du tableau */
        .table {
            width: 100%;
            border-collapse: collapse;
            border-spacing: 0;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table thead th {
            background-color: #343a40;
            color: #fff;
            text-align: left;
            font-size: 16px;
            font-weight: bold;
            padding: 12px;
        }

        .table tbody td {
            padding: 10px;
            text-align: left;
            font-size: 14px;
            color: #333;
            border-bottom: 1px solid #ddd;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        .table tbody .first-row {
            background-color: #e0e0e0;
        }

        /* Style des boutons */
        .btn-success {
            background-color: #28a745;
            color: white;
            border-radius: 5px;
            border: none;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .btn-danger {
            background-color: #dc3545;
            color: white;
            border-radius: 5px;
            border: none;
        }

        .btn-danger:hover {
            background-color: #c82333;
        }

        .text-center {
            text-align: center;
        }

        /* Pagination */
        .pagination {
            display: inline-flex;
            list-style: none;
            padding: 0;
            margin: 20px 0;
        }

        .pagination li a, .pagination li span {
            padding: 8px 12px;
            text-decoration: none;
            font-size: 14px;
            font-weight: bold;
            color: #343a40;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 4px;
            margin: 0 5px;
        }

        .pagination li a:hover, .pagination li span.current {
            background-color: #343a40;
            color: white;
        }
    </style>
{% endblock %}
