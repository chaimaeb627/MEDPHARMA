{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="margin-top: -30px;">
    <!-- En-tête avec retour -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-success" style="color: #28A745 !important;"><i class="bi bi-info-circle"></i>

             Détails du Produit Médical
        </h2>
        <a href="{{ path('admin_medicament_list') }}" class="btn btn-light border rounded-circle shadow-sm p-2">
            <i class="fas fa-times"></i>
        </a>
    </div>

    <!-- Carte d'affichage des détails -->
    <div class="card border-0 shadow-lg p-4 rounded-4">
        <div class="card-body">
            <!-- Grille des informations -->
            <div class="row g-4">
                <!-- Nom du Produit Médical -->
                <div class="col-md-6">
                    <div class="info-box">
                        <span class="icon bg-success"><i class="fas fa-capsules"></i></span>
                        <div>
                            <label>Nom</label>
                            <p>{{ medicament.nom }}</p>
                        </div>
                    </div>
                </div>

                <!-- Dosage -->
                <div class="col-md-6">
                    <div class="info-box">
                        <span class="icon bg-primary"><i class="fas fa-prescription-bottle-alt"></i></span>
                        <div>
                            <label>Dosage</label>
                            <p>{{ medicament.dosage }}</p>
                        </div>
                    </div>
                </div>

                <!-- Forme -->
                <div class="col-md-6">
                    <div class="info-box">
                        <span class="icon bg-warning"><i class="fas fa-pills"></i></span>
                        <div>
                            <label>Forme</label>
                            <p>{{ medicament.forme }}</p>
                        </div>
                    </div>
                </div>

                <!-- Prix -->
                <div class="col-md-6">
                    <div class="info-box">
                        <span class="icon bg-danger"><i class="fas fa-dollar-sign"></i></span>
                        <div>
                            <label>Prix</label>
                            <p>{{ medicament.prix }} DH</p>
                        </div>
                    </div>
                </div>

                <!-- Quantité en Stock -->
                <div class="col-md-6">
                    <div class="info-box">
                        <span class="icon bg-info"><i class="fas fa-boxes"></i></span>
                        <div>
                            <label>Quantité en Stock</label>
                            <p>{{ medicament.quantiteenstock }}</p>
                        </div>
                    </div>
                </div>

                <!-- Date Limite -->
                <div class="col-md-6">
                    <div class="info-box">
                        <span class="icon bg-success"><i class="fas fa-calendar-alt"></i></span>
                        <div>
                            <label>Date Limite</label>
                            <p>{{ medicament.datelimite|date('d/m/Y') }}</p>
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="col-md-12">
                    <div class="info-box">
                        <span class="icon bg-primary"><i class="fas fa-info-circle"></i></span>
                        <div>
                            <label>Description</label>
                            <p>{{ medicament.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Styles -->
<style>
    .info-box {
        display: flex;
        align-items: center;
        background: #f8f9fa;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }

    .info-box:hover {
        transform: scale(1.02);
    }

    .icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        color: white;
        font-size: 20px;
        margin-right: 15px;
    }

    .bg-success { background-color: #28A745; }
    .bg-primary { background-color: #007BFF; }
    .bg-warning { background-color: #FFC107; }
    .bg-danger { background-color: #DC3545; }
    .bg-info { background-color: #17A2B8; }

    label {
        font-weight: bold;
        color: #6c757d;
        font-size: 14px;
    }

    p {
        margin: 0;
        font-size: 16px;
        font-weight: 500;
    }
</style>

<!-- Ajout de FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

{% endblock %}
