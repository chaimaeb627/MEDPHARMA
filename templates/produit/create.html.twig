{% extends 'base.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block body %}
    <div class="modal fade show" id="addProductModal" tabindex="-1" aria-labelledby="addProductModalLabel" aria-hidden="true" style="display: block; background: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="addProductModalLabel" style="font-weight:bold; color: #28A745;">Ajouter un Nouveau Produit</h5>
                    <a href="{{ path('produits_cosmetiques') }}" class="btn-close" aria-label="Close"></a>
                </div>
                <div class="modal-body">
                    {% if form is defined %}
                        {{ form_start(form, {'action': path('produit_ajouter'), 'method': 'POST'}) }}

                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label"style="font-weight:bold;">Nom du Produit</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du produit'}}) }}
                                <div class="text-danger">{{ form_errors(form.nom) }}</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" style="font-weight:bold;">Prix </label>
                                {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prix'}}) }}
                                <div class="text-danger">{{ form_errors(form.prix) }}</div>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="form-label" style="font-weight:bold;">Prix Promo</label>
                                {{ form_widget(form.prixPromo, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prix promo'}}) }}
                                <div class="text-danger">{{ form_errors(form.prixPromo) }}</div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label" style="font-weight:bold;">Catégorie</label>
                                {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
                                <div class="text-danger">{{ form_errors(form.categorie) }}</div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label class="form-label" style="font-weight:bold;">Description</label>
                                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Entrez la description du produit'}}) }}
                                <div class="text-danger">{{ form_errors(form.description) }}</div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label class="form-label" style="font-weight:bold;">Image du Produit</label>
                                {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                                <div class="text-danger">{{ form_errors(form.image) }}</div>
                            </div>
                        </div>

                        <div class="modal-footer mt-4">
                            <a href="{{ path('produits_cosmetiques') }}" class="btn btn-danger">✖ Annuler</a>
                            <button type="submit" class="btn btn-success">✔ Ajouter</button>
                        </div>

                        {{ form_end(form) }}
                    {% else %}
                        <div class="alert alert-danger">Le formulaire n'est pas disponible.</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
